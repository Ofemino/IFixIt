<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Plat4.Mobile.ViewModels"
             xmlns:chat="clr-namespace:Syncfusion.Maui.Chat;assembly=Syncfusion.Maui.Chat"
             x:Class="Plat4.Mobile.Views.Shared.ChatMessagesPage">
    <ContentPage.BindingContext>
        <viewModels:ChatMessagesPageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <chat:SfChat x:Name="sfChat"
                     ShowTimeBreak="True"
                     MessageSpacing="24"
                     Messages="{Binding Messages}"
                     CurrentUser="{Binding CurrentUser}"
                     ShowKeyboardAlways="False"
                     AllowMultilineInput="True"
                     ShowIncomingMessageAuthorName="True"
                     ShowIncomingMessageAvatar="True"
                     IncomingMessageTimestampFormat="hh:mm tt"
                     OutgoingMessageTimestampFormat="hh:mm tt"/>
    </ContentPage.Content>
</ContentPage>